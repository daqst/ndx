{
  "name": "ndx",
  "version": "0.4.1",
  "main": "dist/main/ndx.js",
  "module": "dist/module/ndx.js",
  "es2015": "dist/es2015/ndx.js",
  "typings": "dist/typings/ndx.d.ts",
  "description": "Lightweight full-text searching and indexing library.",
  "scripts": {
    "dist": "rm -rf ./dist && yarn dist:main && yarn dist:module && yarn dist:es2015",
    "dist:es2015": "tsc --project ./tsconfig.build.es2015.json",
    "dist:module": "tsc --project ./tsconfig.build.module.json",
    "dist:main": "tsc --project ./tsconfig.build.main.json",
    "lint": "tslint --project ./tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.6",
    "husky": "^1.0.0-rc.4",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.3",
    "tslib": "^1.9.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "license": "MIT",
  "author": {
    "name": "Boris Kaul",
    "email": "localvoid@gmail.com",
    "url": "https://github.com/localvoid"
  },
  "keywords": [
    "text",
    "full-text",
    "index",
    "search",
    "relevance"
  ],
  "homepage": "https://github.com/localvoid/ndx",
  "repository": {
    "type": "git",
    "url": "https://github.com/localvoid/ndx"
  },
  "bugs": {
    "url": "https://github.com/localvoid/ndx/issues"
