{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "outDir": "dist/es2015",
    "declarationDir": "dist/typings",
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "importHelpers": true,
    "noEmitHelpers": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__"
  ]
}