{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/main",
    "declarationDir": "dist/typings",
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "importHelpers": true,
    "noEmitHelpers": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__"
  ]
}